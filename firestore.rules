/**
 * @fileoverview Firestore Security Rules for WeatherWise Dashboard.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user profiles and favorite cities,
 * while allowing public read access to city, weather data, and forecast information.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles and preferences. Accessible only by the user.
 * - /cities/{cityId}: Stores city data. Publicly readable.
 * - /users/{userId}/favoriteCities/{favoriteCityId}: Stores a user's favorite cities. Accessible only by the user.
 * - /weatherData/{weatherDataId}: Stores current weather data. Publicly readable.
 * - /forecasts/{forecastId}: Stores weather forecasts. Publicly readable.
 *
 * Key Security Decisions:
 * - Users can only read and write their own profiles and favorite cities.
 * - City, weather data, and forecast information are publicly readable.
 * - User listing is disallowed.
 *
 * Denormalization for Authorization:
 * - The `FavoriteCity` entity contains `userId` to easily enforce ownership.
 *
 * Structural Segregation:
 * - User-specific data (profiles, favorite cities) is stored under /users/{userId},
 *   while public data (cities, weather, forecasts) is stored in top-level collections.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    match /cities/{cityId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    match /users/{userId}/favoriteCities/{favoriteCityId} {
      allow get, list, delete: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && request.resource.data.userId == userId;
    }

    match /weatherData/{weatherDataId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    match /forecasts/{forecastId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }
  }
}
